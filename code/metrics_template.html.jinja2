<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="utf-8">
		<title>Gráfico de Uso de CPU</title>
		<link rel="stylesheet" href="style.css">

        <!-- Load jQuery from Google's CDN if needed -->
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
		<script src="code/highcharts/js/highcharts.js"></script>
		<script type="text/javascript">
			Highcharts.setOptions({
                global : {
                    useUTC : false
                }
            });

			$(function(){
		    var chart = new Highcharts.Chart({
		        chart: {"renderTo":"highchart","type":"line","zoomType":"x"},
		        legend: { enabled: false },
		        plotOptions: { series: {
					                marker: {
					                    enabled: false
					                }
					            }
					        },
		        series: [{"name":"% Uso CPU","data":[
		        		{{ cpu_data }}
		        		]}],
		        subtitle: {"text":"Seleccione sobre el gr\u00e1fico para acercar."},
		        title: {"text":"Uso de CPU"},
		        xAxis: {"title":{"text":"Tiempo"},"type":"datetime"},
		        yAxis: {"title":{"text":"Uso CPU"},"labels":{"formatter":function() {
		                                    return this.value + "%";
		                                }}}
		    });
		});
		</script>
	</head>
	<body>
		<h1>Gráfico de Uso de CPU</h1>
		<div id="highchart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
	</body>
</html>